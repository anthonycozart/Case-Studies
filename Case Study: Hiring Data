del recruiter_avg['Application_ID']
del recruiter_avg['Candidate_ID']
del recruiter_avg['Average_Onsite_Interview_Score']
del recruiter_avg['n_recruiters']
recruiter_avg.to_csv("Hiring_Recruiters.csv", float_format='$%.2f')

